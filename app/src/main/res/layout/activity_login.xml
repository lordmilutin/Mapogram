<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.example.nutic.mapogram.LoginActivity">

  <RelativeLayout
    android:layout_width="0dp"
    android:layout_height="500dp"
    tools:layout_editor_absoluteY="20dp"
    android:layout_marginRight="10dp"
    app:layout_constraintRight_toRightOf="parent">

    <EditText
      android:id="@+id/usernameTf"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/registerBtn"
      android:layout_alignLeft="@+id/loginBtn"
      android:layout_alignParentTop="true"
      android:layout_alignRight="@+id/registerBtn"
      android:layout_alignStart="@+id/loginBtn"
      android:layout_marginTop="125dp"
      android:ems="10"
      android:hint="Username"
      android:inputType="textPersonName" />

    <EditText
      android:id="@+id/passwordTf"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignEnd="@+id/registerBtn"
      android:layout_alignLeft="@+id/usernameTf"
      android:layout_alignRight="@+id/registerBtn"
      android:layout_alignStart="@+id/usernameTf"
      android:layout_below="@+id/usernameTf"
      android:layout_marginTop="26dp"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword" />

    <Button
      android:id="@+id/registerBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignBaseline="@+id/loginBtn"
      android:layout_alignBottom="@+id/loginBtn"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="47dp"
      android:layout_marginRight="47dp"
      android:text="Register"
      tools:layout_editor_absoluteX="196dp"
      tools:layout_editor_absoluteY="282dp" />

    <Button
      android:id="@+id/loginBtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentStart="true"
      android:layout_alignTop="@+id/passwordTf"
      android:layout_marginLeft="43dp"
      android:layout_marginStart="43dp"
      android:layout_marginTop="75dp"
      android:text="Login"
      android:onClick="submitForm"
      tools:layout_editor_absoluteX="69dp"
      tools:layout_editor_absoluteY="282dp" />
  </RelativeLayout>

</android.support.constraint.ConstraintLayout>
